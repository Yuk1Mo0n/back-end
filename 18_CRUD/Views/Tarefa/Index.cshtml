@model List<Tarefa>

<h1>Lista de Tarefa</h1>
<table class="table">
    <thead>
        <tr>
            <th> Tarefa</th>
            <th> Concluída</th>
            <th> Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tarefa in Model)
        {
            <tr>
                <td>@tarefa.Descricao</td>
                <td>@(tarefa.Concluida == true ? "Sim" : "Não")</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@tarefa.Id" class="btn btn-secondary">Editar</a>
                    <a asp-action="Deletar" asp-route-id="@tarefa.Id" class="btn btn-danger">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Adicionar"> Adicionar Nova Tarefa </a>